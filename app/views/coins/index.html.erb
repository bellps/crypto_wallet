<p id="notice"><%= notice %></p>
<h1><%=@coins.model_name.human(count: @coins.count)%></h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col"><%= @coins.human_attribute_name(:description) %></th>
            <th scope="col"><%= @coins.human_attribute_name(:acronym) %></th>
            <th scope="col"><%= t('other.image') %></th>
            <th scope="col"><%= @coins.human_attribute_name(:mining_type) %></th>
            <th colspan="4"></th>
        </tr>
    </thead>

    <tbody>
        <% @coins.each do |coin| %>
        <tr>
            <td><%= coin.description %></td>
            <td><%= coin.acronym %></td>
            <td> <%= image_tag coin.url_image, width: 25 %> </td>
            <td><%= coin.mining_type.description %></td>
            <td><%= link_to t('links.show'), coin %><!-- aqui ele na real pega sÃ³ o id da coin --></td>
            <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
            <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to t("new.coin"), new_coin_path, class: "btn btn-primary" %>

